<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackground"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_news_on_the_go"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder"
        ads:layout_constraintDimensionRatio="16:14"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNewsPaperName_news_on_the_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textColor="@color/app_grey"
        android:textSize="12sp"
        ads:layout_constraintEnd_toStartOf="@+id/txtReadMore_news_on_the_go"
        ads:layout_constraintHorizontal_bias="0.059"
        ads:layout_constraintHorizontal_chainStyle="spread_inside"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/tvNewsHighLight_news_on_the_go" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtReadMore_news_on_the_go"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_share_white"
        android:text="Read More"
        android:textColor="@color/app_orange"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.5"
        ads:layout_constraintStart_toEndOf="@+id/tvNewsPaperName_news_on_the_go"
        ads:layout_constraintTop_toBottomOf="@+id/tvNewsHighLight_news_on_the_go" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNewsHighLight_news_on_the_go"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="start"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLines="3"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textColor="?textColor"
        android:textSize="16sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/img_news_on_the_go"
        ads:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <View
        android:id="@+id/dividerLineOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_grey"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/txtReadMore_news_on_the_go" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        ads:adSize="MEDIUM_RECTANGLE"
        ads:adUnitId="@string/banner_add_app_id"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/dividerLineOne" />

    <View
        android:id="@+id/dividerLineThree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_grey"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/adView" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupAdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:constraint_referenced_ids="dividerLineThree,adView" />

</androidx.constraintlayout.widget.ConstraintLayout>
